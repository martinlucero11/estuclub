
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() { return request.auth != null; }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSupplier() { 
      return isSignedIn() && exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid)); 
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // Collection for all redemption records
    match /benefitRedemptions/{redemptionId} {
      // ADMIN: Can read/list all redemptions
      allow read: if isAdmin();

      // SUPPLIER: Can list redemptions for their own benefits if they filter by their ID
      allow list: if isSupplier() && request.query.where.supplierId == request.auth.uid;

      // USER/SUPPLIER: Can read a single redemption if they are the user or the supplier involved
      allow get: if isSignedIn() && (resource.data.userId == request.auth.uid || resource.data.supplierId == request.auth.uid);

      // No client-side writes.
      allow write: if false;
    }

    // Subcollection for user's private history
    match /users/{userId}/redeemed_benefits/{redemptionId} {
      allow read: if isOwner(userId);
      allow write: if false;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /usernames/{username} {
        allow read: if true;
        allow write: if isSignedIn();
    }
    
    // Fallback for other collections to ensure app functionality
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
