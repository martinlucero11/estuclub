rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSupplier() {
      return exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    match /users/{userId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && request.auth.uid == userId || isAdmin();
    }
    
    match /usernames/{username} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    match /benefits/{benefitId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin() || isSupplier();
    }
    
    match /landing_page_modules/{moduleId} {
      allow read, write: if isAdmin();
    }
    
    match /announcements/{announcementId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if (isSignedIn() && resource.data.authorId == request.auth.uid) || isAdmin();
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn() && request.auth.uid == userId;
      allow read, write: if isAdmin();
    }

    match /roles_supplier/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      
      match /services/{serviceId} {
        allow read: if isSignedIn();
        allow write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      }
      
      match /availability/schedule {
        allow read: if isSignedIn();
        allow write: if (isSignedIn() && request.auth.uid == userId) || isAdmin();
      }
      
      match /appointments/{appointmentId} {
        allow read, write: if isSignedIn();
      }
    }
    
    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isSupplier();
    }
    
    match /benefitRedemptions/{id} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "pending";

      allow get: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.supplierId == request.auth.uid ||
        isAdmin()
      );

      allow list: if isSignedIn() && (
        request.query.where("userId", "==", request.auth.uid) ||
        (
          (isSupplier() || isAdmin()) &&
          request.query.where("supplierId", "==", request.auth.uid)
        )
      );

      allow update: if (
        resource.data.supplierId == request.auth.uid ||
        isAdmin()
      );

      allow delete: if false;
    }
  }
}
