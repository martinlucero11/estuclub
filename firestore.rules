
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }
    // Cambiamos isAdmin para que sea más robusto
    function isAdmin() { 
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)) ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      ); 
    }
    function isSupplier() { return isSignedIn() && exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid)); }

    // --- NUEVAS: CATEGORÍAS Y SECCIONES (BLOQUES LEGO) ---
    match /categories/{categoryId} {
      allow read: if true; // Público para la Home
      allow write: if isAdmin(); // Solo tú editas
    }

    match /home_sections/{sectionId} {
      allow read: if true; // Público para armar la Home
      allow write: if isAdmin(); // Solo tú editas
    }

    // --- Publicly Readable Data ---
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /benefits/{benefitId} {
      allow read: if true;
      allow create: if (isSupplier() && request.resource.data.supplierId == request.auth.uid) || isAdmin();
      allow update, delete: if (isSupplier() && resource.data.supplierId == request.auth.uid) || isAdmin();
    }

    // ... (El resto de tus reglas de anuncios, usuarios, etc. se mantienen igual abajo)
    match /announcements/{announcementId} {
      allow get, list: if true;
      allow write: if isSupplier() || isAdmin();
    }
    
    match /roles_supplier/{supplierId} {
      allow get, list: if true;
      allow write: if isAdmin() || isOwner(supplierId);
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if true; // Permitir registro
      allow update: if isOwner(userId) || isAdmin();
    }

    // Regla comodín para evitar bloqueos inesperados en desarrollo
    match /{path=**}/benefitRedemptions/{redemptionId} {
       allow read, write: if isSignedIn();
    }
    
    // Mantenemos tu lógica de admin al final
    match /roles_admin/{adminId} {
      allow read, write: if isAdmin();
    }
  }
}
