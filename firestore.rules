
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSupplier() {
      return exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }
    
    function isSupplierSelf() {
      return isSupplier() && request.auth.uid == resource.data.ownerId;
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if isSignedIn();
    }
    
    match /usernames/{username} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
    }

    match /benefits/{benefitId} {
      allow read: if true;
      allow create: if isAdmin() || isSupplierSelf();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.ownerId);
    }
    
    match /landing_page_modules/{moduleId} {
       allow read, write: if isAdmin();
    }
    
    match /announcements/{announcementId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || request.auth.uid == resource.data.authorId;
    }

    match /redeemed_benefits/{redemptionId} {
      allow create: if isSignedIn();
      allow read: if (isSignedIn() && request.auth.uid == resource.data.userId) 
                      || (isSupplier() && request.auth.uid == resource.data.supplierId) 
                      || isAdmin();
      allow list: if (isSignedIn() && request.query.where.userId == request.auth.uid)
                      || (isSupplier() && request.query.where.supplierId == request.auth.uid)
                      || isAdmin();
    }

    match /roles_admin/{userId} {
      allow read, write: if isAdmin();
    }
    match /roles_supplier/{userId} {
       allow read: if true;
       allow write: if isAdmin();
    }

    match /roles_supplier/{userId}/{document=**} {
      allow read: if true;
      allow write: if request.auth.uid == userId || isAdmin();
    }
    
    match /notifications/{notificationId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
