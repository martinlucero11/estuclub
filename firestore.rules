rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isSupplier() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    match /benefitRedemptions/{redemptionId} {

      // LIST (queries)
      allow list: if isSupplier()
        && request.query.where("supplierId", "==", request.auth.uid);

      // GET (doc individual)
      allow get: if isSupplier()
        && resource.data.supplierId == request.auth.uid;

      allow write: if false;
    }

    match /roles_supplier/{uid} {
      allow read: if isSignedIn() && uid == request.auth.uid;
      allow write: if false;
    }
    
    // Regla de seguridad para permitir que el resto de la app funcione
    match /{document=**} {
        allow read, write: if isSignedIn();
    }
  }
}