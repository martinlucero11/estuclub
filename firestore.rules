
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------
    // Helpers
    // -------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSupplier() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    // -------------------------
    // USERS
    // -------------------------
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isOwner(userId) || isAdmin();
    }
    
    // -------------------------
    // USERNAMES
    // -------------------------
    match /usernames/{username} {
        allow read: if true;
        allow create: if isSignedIn();
    }

    // -------------------------
    // BENEFITS
    // -------------------------
    match /benefits/{benefitId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
     // -------------------------
    // ANNOUNCEMENTS
    // -------------------------
    match /announcements/{announcementId} {
        allow read: if true;
        allow create, update, delete: if isSignedIn() && (request.auth.uid == resource.data.authorId || isAdmin());
    }


    // -------------------------
    // REDEEMED BENEFITS
    // -------------------------
    match /redeemed_benefits/{redeemId} {
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.supplierId != null
        && request.resource.data.benefitId != null;

      allow get, list: if 
        (isSignedIn() && resource.data.userId == request.auth.uid) || 
        (isSupplier() && resource.data.supplierId == request.auth.uid) ||
        isAdmin();

      allow update: if isSupplier() && resource.data.supplierId == request.auth.uid;
      
      allow delete: if false;
    }

    // -------------------------
    // ROLES & SUPPLIER DATA
    // -------------------------
    match /roles_admin/{uid} {
      allow read, write: if isAdmin();
    }

    match /roles_supplier/{uid} {
      allow read: if isOwner(uid) || isAdmin();
      allow write: if isAdmin();
      
      match /services/{serviceId} {
        allow read: if true;
        allow write: if isOwner(uid) || isAdmin();
      }
      
      match /availability/schedule {
         allow read: if true;
         allow write: if isOwner(uid) || isAdmin();
      }
      
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(uid) || isSignedIn();
      }
    }
  }
}
