
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------
    // Helper functions
    // -------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isSupplierSelf() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    function isSupplierOf(userId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_supplier/$(userId));
    }

    // -------------------------
    // USERS
    // -------------------------
    match /users/{userId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update, delete: if isOwner(userId) || isAdmin();
    }
    
    // -------------------------
    // USERNAMES
    // -------------------------
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // -------------------------
    // BENEFITS
    // -------------------------
    match /benefits/{benefitId} {
      allow list, get: if isSignedIn();

      allow create: if isAdmin() || isSupplierSelf();

      allow update: if isAdmin()
        || (isSupplierOf(resource.data.ownerId)
            && request.auth.uid == resource.data.ownerId
            && request.resource.data.ownerId == resource.data.ownerId);

      allow delete: if isAdmin()
        || (isSupplierOf(resource.data.ownerId)
            && request.auth.uid == resource.data.ownerId);
    }
    
    // -------------------------
    // REDEEMED BENEFITS (Root Collection)
    // -------------------------
    match /redeemed_benefits/{redemptionId} {
      // The user creates their own redemption record.
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId
        && request.resource.data.supplierId != null
        && exists(/databases/$(database)/documents/benefits/$(request.resource.data.benefitId));
    
      // Read access:
      // - The user can see their own redemptions.
      // - The supplier can see redemptions for THEIR benefits.
      // - An admin can see everything.
      allow read: if isOwner(resource.data.userId)
        || (isSupplierSelf() && resource.data.supplierId == request.auth.uid)
        || isAdmin();

      // Update access (e.g., to mark as 'used')
      allow update: if (isSupplierSelf() && resource.data.supplierId == request.auth.uid)
        || isAdmin();
    }


    // -------------------------
    // ANNOUNCEMENTS
    // -------------------------
    match /announcements/{announcementId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
    }

    // -------------------------
    // ROLES
    // -------------------------
    match /roles_admin/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    match /roles_supplier/{supplierId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isOwner(supplierId);

      // Subcollections for suppliers
      match /services/{serviceId} {
        allow read: if true;
        allow write: if isOwner(supplierId);
      }
      match /availability/{doc} {
        allow read, write: if isOwner(supplierId);
      }
      match /appointments/{appointmentId} {
        allow read: if isOwner(resource.data.userId) || isOwner(supplierId);
        allow create: if isOwner(request.resource.data.userId);
        allow update: if isOwner(resource.data.userId) || isOwner(supplierId);
      }
    }


    // -------------------------
    // NOTIFICATIONS
    // -------------------------
    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || isSupplierSelf();
    }
  }
}

    