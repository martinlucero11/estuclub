
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isSupplier() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /usernames/{username} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /benefitRedemptions/{redemptionId} {
      // USER: puede leer sus propios canjes
      allow get, list: if isSignedIn() && resource.data.userId == request.auth.uid;

      // SUPPLIER: puede leer canjes de sus beneficios
      allow get, list: if isSupplier() && resource.data.supplierId == request.auth.uid;

      // No client-side writes are allowed. All redemptions are created/updated via secure logic.
      allow write: if false; 
    }
    
    // Fallback for other collections to ensure app functionality
    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}
