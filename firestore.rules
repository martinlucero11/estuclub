rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return isSignedIn() && request.auth.uid == userId; }
    function isSupplier() { return isSignedIn() && exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid)); }
    function isAdmin() { return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid)); }

    // --- Publicly Readable Data ---
    // Benefits, Announcements, and Supplier profiles/services are public (verified rule)
    match /benefits/{benefitId} {
      allow get, list: if true;
      allow write: if isSupplier() || isAdmin();
    }

    match /announcements/{announcementId} {
      allow get, list: if true;
      allow write: if isSupplier() || isAdmin(); // Only suppliers/admins can create/edit announcements. Matches app logic.
    }
    
    match /roles_supplier/{supplierId} {
      allow get, list: if true; // Public supplier pages
      allow write: if isAdmin() || isOwner(supplierId); // Admin can create/edit suppliers, supplier can edit their own profile.
    }

    match /roles_supplier/{supplierId}/services/{serviceId} {
      allow read: if true;
      allow write: if isOwner(supplierId) || isAdmin();
    }

    match /roles_supplier/{supplierId}/availability/{schedule} {
      allow read: if true;
      allow write: if isOwner(supplierId) || isAdmin();
    }
    
    match /usernames/{username} {
      allow read: if true;
      // Allow creation only if the user is creating their own username mapping.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Allow update/delete only by the user who owns the username, or an admin. This is for changing username.
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    match /notifications/{notificationId} {
        allow list, get: if true; // Public notifications
        allow write: if isSupplier() || isAdmin();
    }

    // --- Private User Data ---
    match /users/{userId} {
      allow read: if true; // Publicly readable for leaderboards, profiles, etc.
      allow write: if isOwner(userId); // Only owner can edit their own profile.
    }
    
    match /users/{userId}/redeemed_benefits/{redemptionId} {
      // This is a private copy for the user's history, only they can read it.
      // It's written via a batch write, so direct client writes are disallowed.
      allow read: if isOwner(userId);
      allow write: if false; 
    }

    // --- Operational/Mixed-Access Data ---
    match /benefitRedemptions/{redemptionId} {
      // Get is allowed if you are the user who redeemed, the supplier who owns the benefit, or an admin.
      allow get: if (isSignedIn() && resource.data.userId == request.auth.uid) || 
                   (isSupplier() && resource.data.supplierId == request.auth.uid) || 
                   isAdmin();
      
      // List is allowed by suppliers for their own redemptions, and by admins for all redemptions.
      allow list: if (isSupplier() && request.query.where.supplierId == request.auth.uid) || isAdmin();

      // Creating a redemption is part of a batch write initiated by the user.
      // The user must be creating it for themselves.
      allow create: if isOwner(request.resource.data.userId);

      // Updating a redemption (marking as 'used') is done by the supplier or admin.
      allow update: if (isSupplier() && resource.data.supplierId == request.auth.uid) || isAdmin();

      // Deleting redemptions is not allowed from the client.
      allow delete: if false;
    }

    match /roles_supplier/{supplierId}/appointments/{appointmentId} {
        // Read is allowed by the user who booked, or the supplier who owns the calendar.
        allow read: if isOwner(resource.data.userId) || isOwner(supplierId);
        // Any signed-in user can create an appointment.
        allow create: if isSignedIn(); 
        // A user can cancel their own appointment, or a supplier can manage their calendar.
        allow update, delete: if isOwner(resource.data.userId) || isOwner(supplierId); 
    }

    // --- Admin-Only Data ---
    match /roles_admin/{adminId} {
      allow read, write: if isAdmin();
    }
  }
}
