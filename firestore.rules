rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSupplier() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    // --- BENEFIT REDEMPTIONS (EL FOCO DEL ERROR) ---
    match /benefitRedemptions/{redemptionId} {
      
      // Regla para LISTAR: Forzamos a que la consulta incluya el filtro de seguridad
      allow list: if isSignedIn() && (
        request.query.limit <= 100 && (
          request.query.where.userId == request.auth.uid || 
          (isSupplier() && request.query.where.supplierId == request.auth.uid)
        )
      );

      // Regla para obtener un documento INDIVIDUAL
      allow get: if isSignedIn() && (
        resource.data.userId == request.auth.uid || 
        resource.data.supplierId == request.auth.uid
      );

      allow write: if false;
    }

    // --- OTRAS COLECCIONES ---
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /usernames/{username} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /roles_supplier/{userId} {
      allow read: if isOwner(userId);
    }

    match /{document=**} {
      allow read, write: if isSignedIn();
    }
  }
}