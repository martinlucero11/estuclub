rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSupplier() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    // --- USER-SPECIFIC SUBCOLLECTION ---
    match /users/{userId}/redeemed_benefits/{redemptionId} {
      // Allow a user to read their own redeemed benefits.
      allow read: if isOwner(userId);
      // Disallow write operations from the client for now.
      allow write: if false;
    }

    // --- GLOBAL REDEMPTIONS (FOR SUPPLIERS) ---
    match /benefitRedemptions/{redemptionId} {
      // Keep this rule for suppliers to be able to read redemptions.
      allow read: if isSupplier() && resource.data.supplierId == request.auth.uid;
      allow write: if false;
    }

    // --- OTHER COLLECTIONS ---
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /usernames/{username} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /roles_supplier/{userId} {
      allow read: if isOwner(userId);
    }

    // Fallback for other collections to ensure app functionality.
    match /{document=**} {
      allow read: if isSignedIn();
      allow write: if false;
    }
  }
}