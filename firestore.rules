
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isSupplier() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    match /benefitRedemptions/{redemptionId} {

      // Users can list their OWN redemptions.
      allow list: if isSignedIn()
        && request.query.where("userId", "==", request.auth.uid);

      // Suppliers can list redemptions for THEIR business.
      allow list: if isSupplier()
        && request.query.where("supplierId", "==", request.auth.uid);

      // A user can read their own redemption doc. A supplier can read a redemption for their business.
      allow get: if (isSignedIn() && resource.data.userId == request.auth.uid)
                  || (isSupplier() && resource.data.supplierId == request.auth.uid);

      allow write: if false; // Writes are handled by secure backend logic, not directly by clients.
    }

    match /roles_supplier/{uid} {
      allow read: if isSignedIn() && uid == request.auth.uid;
      allow write: if false;
    }
    
    // Regla de seguridad para permitir que el resto de la app funcione
    match /{document=**} {
        allow read, write: if isSignedIn();
    }
  }
}
