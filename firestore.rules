
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSupplier() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isOwner(userId) || isAdmin();
    }
    
    match /usernames/{username} {
        allow read: if true;
        allow create: if isSignedIn() && !exists(path);
        allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow update: if false;
    }

    match /benefits/{benefitId} {
      allow read: if true;
      allow update: if isSupplier() || isAdmin(); 
      allow create, delete: if isAdmin();
    }
    
    match /announcements/{announcementId} {
        allow read: if true;
        allow create: if isSignedIn() && (request.resource.data.authorId == request.auth.uid || isAdmin());
        allow update, delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isAdmin());
    }

    match /redeemed_benefits/{id} {
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      
      // USER: Can read their own redemptions (get single doc)
      allow get: if isSignedIn() && (resource.data.userId == request.auth.uid || resource.data.supplierId == request.auth.uid || isAdmin());
      
      // USER: Can list their own redemptions
      allow list: if isSignedIn() && request.query.where("userId", "==", request.auth.uid);
      
      // SUPPLIER/ADMIN: Can list redemptions for their benefits.
      allow list: if (isSupplier() || isAdmin()) && request.query.where("supplierId", "==", request.auth.uid);
      
      allow update: if isOwner(resource.data.userId) || isOwner(resource.data.supplierId) || isAdmin();
      allow delete: if false;
    }
    
    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /roles_supplier/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      
      match /services/{serviceId} {
        allow read: if true;
        allow write: if isOwner(uid) || isAdmin();
      }
      
      match /availability/schedule {
         allow read: if true;
         allow write: if isOwner(uid) || isAdmin();
      }
      
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(uid) || isSignedIn();
      }
    }
  }
}
