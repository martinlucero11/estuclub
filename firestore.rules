
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSupplier() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_supplier/$(request.auth.uid));
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Allow a user to update their own profile (e.g., for points)
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    match /usernames/{username} {
        allow read: if true;
        allow create: if isSignedIn() && !exists(path);
        allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow update: if false;
    }

    match /benefits/{benefitId} {
      allow read: if true;
      allow update: if isSupplier() || isAdmin(); 
      allow create, delete: if isAdmin();
    }
    
    match /announcements/{announcementId} {
        allow read: if true;
        allow create: if isSignedIn() && (request.resource.data.authorId == request.auth.uid || isAdmin());
        allow update, delete: if isSignedIn() && (resource.data.authorId == request.auth.uid || isAdmin());
    }

    match /redeemed_benefits/{redemptionId} {
      // User can create their own redemption record
      allow create: if isOwner(request.resource.data.userId);

      // User can read their own records, Supplier can read records for their benefits
      allow get: if isOwner(resource.data.userId) || isOwner(resource.data.supplierId) || isAdmin();
      
      // User can list their own records
      allow list: if isSignedIn() && request.query.where("userId", "==", request.auth.uid);
      
      // Supplier can update status from pending to used
      allow update: if isOwner(resource.data.supplierId)
                    && resource.data.status == "pending"
                    && request.resource.data.status == "used";

      allow delete: if false;
    }
    
    match /benefitRedemptions/{redemptionId} {
      // CREATE: Any authenticated user can create their own redemption record.
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.status == "pending";

      // READ (USER): A user can list/get their own redemptions.
      allow list: if isSignedIn() && request.query.where("userId", "==", request.auth.uid);
      allow get: if isSignedIn() && resource.data.userId == request.auth.uid;

      // READ (SUPPLIER): A supplier can list/get redemptions for their benefits.
      allow list: if isSupplier() && request.query.where("supplierId", "==", request.auth.uid);
      allow get: if isSupplier() && resource.data.supplierId == request.auth.uid;
      
      // UPDATE (SUPPLIER): A supplier can update a 'pending' redemption to 'used'.
      allow update: if isSupplier()
        && resource.data.supplierId == request.auth.uid
        && resource.data.status == "pending"
        && request.resource.data.status == "used";

      // ADMIN: Admins can read/write everything.
      allow read, write: if isAdmin();

      // DELETE: Nobody can delete.
      allow delete: if false;
    }

    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /roles_admin/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /roles_supplier/{uid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      
      match /services/{serviceId} {
        allow read: if true;
        allow write: if isOwner(uid) || isAdmin();
      }
      
      match /availability/schedule {
         allow read: if true;
         allow write: if isOwner(uid) || isAdmin();
      }
      
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(uid) || isSignedIn();
      }
    }
  }
}
