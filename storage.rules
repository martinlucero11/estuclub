
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }

    function isAdmin() {
      return request.auth != null &&
        exists(/databases/(default)/documents/roles_admin/$(request.auth.uid));
    }

    // More specific rule for supplier assets.
    // Publicly readable, but only the owner or an admin can write.
    match /suppliers/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    // Fallback rule for any other path. 
    // This is intentionally restrictive. Add more specific match blocks above this one as needed.
    match /{path=**} {
        allow read: if true; // Allow public read for now, can be restricted later.
        allow write: if isAdmin(); // Only admins can write to other paths by default.
    }
  }
}
