
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------
    // Helper functions
    // -------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isSupplier(userId) {
      // If userId is provided, check if the requesting user is that specific supplier.
      // Otherwise, check if the requesting user has the supplier role in general.
      return isSignedIn() &&
        exists(/databases/$(database)/documents/roles_supplier/$(userId_or_auth_uid(userId)));
    }

    function userId_or_auth_uid(userId) {
      return userId != null ? userId : request.auth.uid;
    }
    

    // -------------------------
    // USERS
    // -------------------------
    match /users/{userId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn();
      allow update, delete: if isOwner(userId) || isAdmin();
    }
    
    // -------------------------
    // USERNAMES
    // -------------------------
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // -------------------------
    // BENEFITS
    // -------------------------
    match /benefits/{benefitId} {
      allow read: if isSignedIn();
      allow create: if isAdmin() || isSupplier(null);
      allow update: if isAdmin() || (isSupplier(resource.data.ownerId) && request.resource.data.ownerId == resource.data.ownerId);
      allow delete: if isAdmin() || (isSupplier(resource.data.ownerId) && request.auth.uid == resource.data.ownerId);
    }
    
    // -------------------------
    // REDEEMED BENEFITS (Root Collection)
    // -------------------------
    match /redeemed_benefits/{redemptionId} {
      // A user can create their own redemption record.
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      // A user can read their own redemptions.
      // A supplier can read redemptions of their own benefits.
      allow read: if isOwner(resource.data.userId) || isSupplier(resource.data.ownerId) || isAdmin();
      // Allow update for status changes by supplier/admin.
      allow update: if isSupplier(resource.data.ownerId) || isAdmin();
    }


    // -------------------------
    // ANNOUNCEMENTS
    // -------------------------
    match /announcements/{announcementId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
    }

    // -------------------------
    // ROLES
    // -------------------------
    match /roles_admin/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isAdmin();
    }

    match /roles_supplier/{supplierId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isOwner(supplierId);

      // Subcollections for suppliers
      match /services/{serviceId} {
        allow read: if true;
        allow write: if isOwner(supplierId);
      }
      match /availability/{doc} {
        allow read, write: if isOwner(supplierId);
      }
      match /appointments/{appointmentId} {
        allow read: if isOwner(resource.data.userId) || isOwner(supplierId);
        allow create: if isOwner(request.resource.data.userId);
        allow update: if isOwner(resource.data.userId) || isOwner(supplierId);
      }
    }


    // -------------------------
    // NOTIFICATIONS
    // -------------------------
    match /notifications/{notificationId} {
        allow read: if true;
        allow create: if isAdmin() || isSupplier(null);
    }
  }
}
